<?xml version="1.0" encoding="utf-8"?>
<!--
侧滑出来的菜单
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left_drawer"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:clickable="true"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <FrameLayout
        android:background="#C0c0c0"
        android:layout_height="160dp"
        android:layout_width="match_parent"
        >

   <!-- <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        />-->

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_marginBottom="20dp"
        />

        <LinearLayout
            android:layout_height="160dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/photo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#ffffff"/>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/month_expense_tip"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"
                        android:text="@string/this_month"
                        android:gravity="left|center_vertical"
                        />

                    <com.katherine_qj.saver.ui.RiseNumberTextView
                        android:id="@+id/month_expense"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/white"
                        android:text="1000"
                        android:gravity="center_vertical|right"
                        android:textSize="45sp"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/user_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/user_email"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="#ffffff"
                />

        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <!--支出明细-->
            <com.balysv.materialripple.MaterialRippleLayout

                android:id="@+id/list_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#0000ff"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="false">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/list"
                        android:scaleType="center"
                        android:id="@+id/list_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/list_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="@string/list_view"
                        android:textColor="@color/drawer_text"
                        />

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>
            <!--月支出报表-->
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/month_layout"
                android:layout_width="match_parent"

                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#0000ff"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="false">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"

                        android:background="@drawable/month"
                        android:scaleType="center"
                        android:id="@+id/month_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/month_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="@string/months_view"
                        android:textColor="@color/drawer_text"
                        />

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>
            <!--年度支出报表-->
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/report_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#0000ff"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="false">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/year"
                        android:scaleType="center"
                        android:id="@+id/report_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/report_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="@string/expense_report"
                        android:textColor="@color/drawer_text"
                        />

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>

            <!--数据同步-->
<!--
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/sync_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#0000ff"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="false">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:materialIcon="sync"
                        app:materialIconColor="@color/my_gray"
                        app:materialIconSize="24dp"
                        android:scaleType="center"
                        android:id="@+id/sync_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/sync_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="@string/sync"
                        android:textColor="@color/drawer_text"
                        />

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>
-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp" />
             <!--设置页-->
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/settings_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#0000ff"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="false">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/set"
                        android:scaleType="center"
                        android:id="@+id/settings_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/settings_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="@string/settings"
                        android:textColor="@color/drawer_text"
                        />

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>
             <!--关于介绍页面-->
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/about_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#0000ff"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="false">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="center"
                        android:background="@drawable/about"
                        android:id="@+id/about_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/about_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="@string/about"
                        android:textColor="@color/drawer_text"
                        />

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </ScrollView>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/sync_layout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/icloud" />

    </com.balysv.materialripple.MaterialRippleLayout>
    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical">
        <TextView
            android:text="@string/icloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>